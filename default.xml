<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote fetch="http://code.ossystems.com.br" name="code" review="code.ossystems.com.br"/>
  <remote fetch="git://git.yoctoproject.org" name="yocto"/>
  <remote fetch="git://github.com/Freescale" name="fslc"/>
  <remote fetch="git://git.openembedded.org" name="oe"/>

  <default remote="code" revision="master" sync-j="4"/>

  <project remote="yocto" revision="dylan" name="poky" path="sources/poky"/>
  <project remote="oe"    revision="dylan" name="meta-openembedded" path="sources/meta-openembedded"/>

  <project name="ossystems-yocto-base-scripts" path="sources/base" remote="code">
    <copyfile dest="setup-environment" src="setup-environment"/>
  </project>

  <!-- Freescale -->
  <project remote="yocto" revision="master" name="meta-fsl-arm" path="sources/meta-fsl-arm"/>
  <project remote="fslc" revision="master" name="meta-fsl-arm-extra" path="sources/meta-fsl-arm-extra"/>
  <project remote="fslc" revision="master" name="meta-fsl-demos" path="sources/meta-fsl-demos"/>

  <!-- conf -->
  <project name="ossystems-yocto-platform" path="sources/conf/repo" remote="code" revision="master"/>
  <project name="ossystems-yocto-config" path="sources/conf/tools" remote="code" revision="master"/>

</manifest>
